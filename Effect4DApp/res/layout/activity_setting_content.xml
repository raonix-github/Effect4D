<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/BACKGROUND" >

    <LinearLayout
        android:id="@+id/LinearLayout2"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@color/BACKGROUND"
        android:baselineAligned="false"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="@dimen/cell_width"
            android:layout_height="@dimen/cell_height"
            android:layout_margin="@dimen/MarginDefault" >

            <ImageView
                android:id="@+id/menu_btn_home"
                android:layout_width="@dimen/cell_half_width"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/MarginDefault"
                android:layout_marginRight="@dimen/cell_half_space"
                android:contentDescription="@string/empty"
                android:src="@drawable/btn_home" />
        </LinearLayout>

        <ImageView
            android:id="@+id/menu_img_title"
            android:layout_width="@dimen/cell_width"
            android:layout_height="@dimen/cell_height"
            android:layout_margin="@dimen/MarginDefault"
            android:contentDescription="@string/empty"
            android:src="@drawable/menutitle_home" />

        <Button
            android:id="@+id/menu_01"
            android:layout_width="@dimen/cell_width"
            android:layout_height="@dimen/cell_height"
            android:layout_margin="@dimen/MarginDefault" />

        <Button
            android:id="@+id/menu_02"
            android:layout_width="@dimen/cell_width"
            android:layout_height="@dimen/cell_height"
            android:layout_margin="@dimen/MarginDefault" />

        <Button
            android:id="@+id/menu_03"
            android:layout_width="@dimen/cell_width"
            android:layout_height="@dimen/cell_height"
            android:layout_margin="@dimen/MarginDefault" />

        <Button
            android:id="@+id/menu_04"
            android:layout_width="@dimen/cell_width"
            android:layout_height="@dimen/cell_height"
            android:layout_margin="@dimen/MarginDefault" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/MarginDefault"
        android:background="@color/WHITEGRAY" >

        <LinearLayout
	        android:id="@+id/sub_screen_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
        </LinearLayout>

    </ScrollView>

</LinearLayout>