<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/setting_itm_height"
    android:paddingLeft="@dimen/MarginMain"
    android:paddingRight="@dimen/MarginMain"
    android:paddingTop="@dimen/MarginDefault"
    android:paddingBottom="@dimen/MarginDefault"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/txt_message"
        android:layout_width="@dimen/setting_left"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:text="@string/la_sync_video_play"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/video_sync_delay"
        android:layout_width="@dimen/setting_left"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:text="@string/empty"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/btn_video_minus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="4dp"
        android:background="@drawable/btn_minus"
        android:text="@string/empty" />

    <Button
        android:id="@+id/btn_video_plus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@drawable/btn_plus"
        android:text="@string/empty" />

</LinearLayout>
